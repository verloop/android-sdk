<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:weightSum="10"
    tools:context=".TestActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="0.8">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editClientId1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Client ID"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editClientId2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Client ID"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserId1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="User ID"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserId2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="User ID"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editRecipeId1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Recipe ID"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editRecipeId2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Recipe ID"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserEmail1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserEmail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserPhone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone No"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editUserPhone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone No"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editDepartment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Department"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <EditText
                        android:id="@+id/editDepartment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Department"
                        tools:ignore="MissingConstraints" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow android:layout_marginTop="8dp">
                <CheckBox
                    android:id="@+id/checkBoxStaging"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staging Env" />

                <CheckBox
                    android:id="@+id/checkBoxFCM"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FCM Token" />
            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Start Chat 01"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Start Chat 02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/close_chat_1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Logout Chat 01" />

            <Button
                android:id="@+id/close_chat_2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Logout Chat 02" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>